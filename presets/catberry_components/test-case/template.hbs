{{#if componentName}}
	<h2 class="catHeading catHeading--2">
        {{../componentName}}
	</h2>
	<div class="catParagraph catTabs">
		<span class="catTabs-item">Cases: </span>
        {{#each ../cases}}
			<a class="catTabs-item {{#if this.isActive}}is-active{{/if}}" href="/cases/{{../../componentName}}/{{this.testCaseName}}">{{this.testCaseName}}</a>
        {{/each}}
	</div>
	<div class="catDivider"></div>
{{/if}}
{{#if currentCase}}
	<div class="catParagraph">
		<div class="catHeading catHeading--3 catParagraph">{{../currentCase.description}}</div>
		<div class="catParagraph js-component-test">
			<div class="catTest" style="{{../currentCase.styles}}">
                {{#if ../currentCase.data}}
					<cat-test-case-{{../componentName}}
						id="js-test-case-{{../componentName}}-{{../testCaseName}}"
                    {{#each ../currentCase.attributes}}
                        {{@key}}="{{this}}"
                    {{/each}}
					test-case-name="{{../testCaseName}}"
					test-case-component="{{../componentName}}">

					</cat-test-case-{{../componentName}}>
                {{else}}
					<cat-{{../componentName}}
						id="js-test-case-{{../componentName}}-{{../testCaseName}}"
                    {{#each ../currentCase.attributes}}
                        {{@key}}="{{this}}"
                    {{/each}}
                    {{#if ../currentCase.store}}cat-store="{{../currentCase.store}}"{{/if}}>

					</cat-{{../componentName}}>
                {{/if}}
			</div>
		</div>
		<div class="catDivider"></div>
		<div class="catParagraph">
			<a href="#" class="catButton js-show-component-markup">Show markup</a>
			<a href="#" class="catButton js-show-component-case">Show options of case</a>
			<a href="#" class="catButton js-show-component-html">Show generated html</a>
			<a href="#" class="catButton js-show-component-cookie">Show current cookie</a>
		</div>
		<div class="catParagraph js-component-markup" style="display: none;">
			<pre class="catBlockCode"><code class="catCode js-highlight html">&lt;cat-{{../componentName}} id="js-cat-{{../componentName}}"{{#each ../currentCase.attributes}} {{@key}}="{{this}}"{{/each}}{{#if ../currentCase.store}} cat-store="{{../currentCase.store}}"{{/if}}&gt;&lt;/cat-{{../componentName}}&gt;</code><span class="catBlockCode-title">markup</span></pre>
		</div>
		<div class="catParagraph js-component-case" style="display: none">
			<pre class="catBlockCode"><code class="catCode js-highlight json">{{../currentCase.string}}</code><span class="catBlockCode-title">case</span></pre>
		</div>
		<div class="catParagraph js-component-html" style="display: none">
			<pre class="catBlockCode"><code class="catCode js-highlight html"></code><span class="catBlockCode-title">html</span></pre>
		</div>
		<div class="catParagraph js-component-cookie" style="display: none">
			<pre class="catBlockCode"><code class="catCode js-highlight json">{{../cookie}}</code><span class="catBlockCode-title">cookie</span></pre>
		</div>
	</div>
{{/if}}